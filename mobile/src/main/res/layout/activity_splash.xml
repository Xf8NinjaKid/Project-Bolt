<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivy.green.bolt.SplashActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_splash"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_splash"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_splash"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_splash"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.12" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/progressBar4"
        app:layout_constraintLeft_toLeftOf="@+id/activity_splash"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_splash"
        android:layout_marginTop="392dp"
        app:layout_constraintRight_toRightOf="@+id/activity_splash"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_splash"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.94" />

</android.support.constraint.ConstraintLayout>
